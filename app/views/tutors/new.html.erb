<h1>New Tutor</h1>

<%= form_with(model: @tutor, local: true) do |form| %>
  <% if @tutor.errors.any? %>
    <div class="error-messages">
      <h2><%= pluralize(@tutor.errors.count, "error") %> prevented this tutor from being saved:</h2>
      <ul>
        <% @tutor.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :surname %>
    <%= form.text_field :surname %>
  </div>

  <div>
    <%= form.label :tutor_specialization, "Specialization" %>
    <%= form.text_field :tutor_specialization %>
  </div>

  <div>
    <%= form.label :hourly_price, "Hourly Price" %>
    <%= form.number_field :hourly_price %>
  </div>

  <div>
    <%= form.submit "Create Tutor" %>
  </div>
<% end %>

<%= link_to 'Back to Tutors List', tutors_path %>