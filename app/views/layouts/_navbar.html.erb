<nav class="navbar navbar-expand-lg custom-navbar">
  <div class="container-fluid">
    <a class="navbar-brand text-white" href="<%= tutors_path(params.permit(:query, :specialization, :date, :page)) %>">Tutors</a>

    <button class="navbar-toggler navbar-dark" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarContent">
      <%= form_with url: tutors_path, method: :get, local: true, class: "d-flex ms-auto search-form" do %>
        <div class="input-group me-2">
          <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Search Name..." %>
        </div>

        <div class="me-2" style="min-width: 150px;">
          <%= select_tag :specialization, options_for_select(["All"] + (@specializations || []), params[:specialization]), class: "form-select" %>
        </div>

        <div class="me-2">
          <%= date_field_tag :date, params[:date].presence || "", class: "form-control" %>
        </div>

        <div>
          <%= submit_tag "Search", class: "btn btn-success" %>
        </div>
      <% end %>

      <div class="ms-3">
        <%= link_to 'Add a New Tutor', new_tutor_path, class: "btn btn-warning" %>
      </div>
    </div>
  </div>
</nav>
